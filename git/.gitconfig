[core]
  editor = nvim
[user]
	name = Gustavo Schneider
	email = gustavo.schneider.dev@gmail.com
[color]
	ui = auto
[alias]
	s = !git status -s
  l = !git log --pretty=format:'%C(yellow)%h %C(red)%d %C(white)%s - %C(cyan)%cn, %C(green)%cr'
  lg = !git log --graph --decorate --all --pretty=format:'%C(yellow)%h %C(red)%d %C(white)%s - %C(cyan)%cn, %C(green)%cr'
  pl = !git pull
  ps = !git push
[push]
	followTags = true
[init]
	defaultBranch = main
